<ui:UiPage
    x:Class="Serein.Windows.Pages.Function.Container"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Serein.Windows.Pages.Function"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="850"
    d:DesignWidth="800"
    AllowDrop="True"
    mc:Ignorable="d">
    <Grid Grid.Row="1" Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ui:NavigationCompact
            x:Name="Navigation"
            Grid.Column="0"
            Margin="6,0,6,0"
            Frame="{Binding ElementName=RootFrame}"
            SelectedPageIndex="0">
            <ui:NavigationCompact.Items>
                <ui:NavigationItem
                    x:Name="BotNavigationItem"
                    Content="机器人"
                    Icon="Bot24"
                    PageTag="bot"
                    PageType="{x:Type pages:Bot}" />
                <ui:NavigationItem
                    x:Name="MemberNavigationItem"
                    Content="成员管理"
                    Icon="PeopleCommunity24"
                    PageTag="member"
                    PageType="{x:Type pages:Member}" />
                <ui:NavigationItem
                    x:Name="RegexNavigationItem"
                    Content="正则"
                    Icon="TextBulletListSquare24"
                    PageTag="regex"
                    PageType="{x:Type pages:Regex}" />
                <ui:NavigationItem
                    x:Name="ScheduleNavigationItem"
                    Content="定时任务"
                    Icon="Timer24"
                    PageTag="schedule"
                    PageType="{x:Type pages:Schedule}" />
                <ui:NavigationItem
                    x:Name="JSPluginNavigationItem"
                    Content="JS插件"
                    Icon="Javascript24"
                    PageTag="jsplugin"
                    PageType="{x:Type pages:JSPlugin}" />
            </ui:NavigationCompact.Items>
        </ui:NavigationCompact>
        <Border
            Grid.Column="1"
            Margin="0"
            Padding="10,5"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <Frame x:Name="RootFrame" />
        </Border>
    </Grid>
</ui:UiPage>
